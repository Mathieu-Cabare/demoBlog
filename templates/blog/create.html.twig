{% extends "base.html.twig" %}

{# on hérite du template 'base.html.twig' #}
{# tout le contenu du bloc body sera envoyé dans le template 'base.html.twig' #}

{% block body %}

<h1 class="display-4 text-center my-4">Création d'un article</h1>

<form method="post" class="col-md-8 mx-auto">
    <div class="form-group">
        <div class="mx-auto mt-3">
        <label class="" for="titre">Ajouter un Titre</label>
        <input type="text" class="form-control" name="titre" id="titre">
        </div>
    </div>
    <div class="form-group">
        <div class=" mx-auto mt-3">
        <label class="" for="image">Ajouter une Image</label>
        <input type="text" class="form-control" name="image" id="image">
        </div>
    </div>
    <div class="form-group">
        <div class=" mx-auto mt-3">
            <label class="" for="content">Ajouter votre article</label>
            <textarea class="form-control"  name="content" id="content" rows="14" ></textarea>
        </div>
    </div>
    <button type="button" class="btn btn-secondary">Secondary</button>
</form>


    
<form>
  
    {# cols="50" #}
</form>

{% endblock %}